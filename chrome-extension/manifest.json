{
  "manifest_version": 3,
  "name": "Central for Front",
  "version": "1.0.0",
  "description": "Link Front conversations to Central tasks",
  "permissions": ["storage"],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://central.clix.co/*",
    "https://app.frontapp.com/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["https://app.frontapp.com/*"],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "http://localhost:3000/settings/integrations*",
        "https://central.clix.co/settings/integrations*"
      ],
      "js": ["content/auto-connect.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
